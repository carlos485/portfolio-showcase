<section class="container mx-auto px-4 min-h-screen flex flex-col justify-center items-center" aria-labelledby="hero-title">
	<!-- Header con nombre -->
	<header class="text-center mb-16">
			<h1 id="hero-title" class="text-6xl md:text-7xl lg:text-8xl font-light tracking-wider mb-8 font-['Major_Mono_Display']">
					<span class="text-black dark:text-white">Carlos</span>
					<span class="text-black dark:text-white">Pando</span>
			</h1>
	</header>

	<!-- Iconos de redes sociales -->
	<nav class="flex space-x-8 mb-16 items-center" aria-label="Redes sociales">
			<!-- LinkedIn -->
			<a href="https://www.linkedin.com/in/carlos-pando-54786218a/" target="_blank" rel="noopener noreferrer" class="text-black hover:text-gray-600 transition-colors duration-200" aria-label="LinkedIn">
					<span class="icon-[garden--linkedin-stroke-12] text-5xl dark:text-white"></span>
			</a>

			<!-- GitHub -->
			<a href="https://github.com/carlos485" target="_blank" rel="noopener noreferrer" class="text-black hover:text-gray-600 transition-colors duration-200" aria-label="GitHub">
				<span class="icon-[feather--github] text-5xl dark:text-white"></span>
			</a>

			<!-- Email -->
			<div class="relative">
				<button id="copy-email-button" data-email="carlospando856@gmail.com" class="text-black hover:text-gray-600 transition-colors duration-200 focus:outline-none" aria-label="Copiar email">
					<span class="icon-[oui--email] text-5xl dark:text-white"></span>
				</button>
				<span id="copy-feedback" class="absolute -top-10 left-1/2 -translate-x-1/2 bg-gray-800 text-white text-xs rounded py-1 px-2 opacity-0 transition-opacity duration-300 pointer-events-none" aria-live="polite">
					<!-- El contenido se insertará con JS -->
				</span>
			</div>
	</nav>

	<!-- Botones de acción -->
	<div class="flex flex-col sm:flex-row gap-4">
			<a href="/cv.pdf" target="_blank" rel="noopener noreferrer" class="bg-black dark:bg-white text-white hover:bg-gray-800 dark:text-black dark:hover:bg-gray-200 px-8 py-3 text-xl font-medium tracking-wide transition-all duration-300 flex items-center justify-center gap-2">
					<span class="icon-[streamline--business-user-curriculum] text-2xl"></span>
					ver cv
			</a>

			<a href="/experiencia" class="border-2 border-black dark:border-white text-black dark:text-white px-8 py-3 text-xl font-medium tracking-wide hover:bg-black dark:hover:bg-white hover:text-white dark:hover:text-black transition-all duration-300 flex items-center justify-center gap-2">
					<span class="icon-[fe--timeline] text-3xl"></span>
					experiencia
			</a>
	</div>
</section>

<script>
	const copyButton = document.getElementById('copy-email-button');
	const copyFeedback = document.getElementById('copy-feedback');

	// Asegurarse de que los elementos existen antes de añadir listeners
	if (copyButton && copyFeedback) {
		let feedbackTimeout: NodeJS.Timeout;


		const showFeedback = (message: string, duration = 2000) => {
			// Asigna el mensaje y lo hace visible. El cambio de contenido
			// será anunciado por lectores de pantalla gracias a `aria-live`.
			copyFeedback.textContent = message;
			copyFeedback.style.opacity = '1';

			// Limpia cualquier timeout anterior para evitar solapamientos
			clearTimeout(feedbackTimeout);

			// Oculta el mensaje después de la duración especificada
			feedbackTimeout = setTimeout(() => {
				copyFeedback.style.opacity = '0';
			}, duration);
		};

		copyButton.addEventListener('click', () => {
			const email = copyButton.dataset.email;
			if (!email) return;

			navigator.clipboard.writeText(email)
				.then(() => {
					showFeedback('¡Copiado!');
				})
				.catch(err => {
					console.error('Error al copiar el email: ', err);
					showFeedback('Error al copiar');
				});
		});
	}
</script>