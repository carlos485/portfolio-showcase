---
import '../styles/global.css';
import Icon from '../components/Icon.astro';
import ThemeToggle from '../components/ThemeToggle.astro';

const title = "Carlos Pando - Portfolio";
const description = "Portfolio personal de Carlos Pando - Desarrollador Web";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="theme-color" content="#000000" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		
		<title>{title}</title>
	</head>
	<body>
		<ThemeToggle />
		<div class="container mx-auto px-4 min-h-screen flex flex-col justify-center items-center">
			<!-- Header con nombre -->
			<header class="text-center mb-16">
					<h1 class="text-6xl md:text-7xl lg:text-8xl font-light tracking-wider mb-8 font-['Major_Mono_Display']">
							<span class="text-black dark:text-white">Carlos</span>
							<span class="text-black dark:text-white">Pando</span>
					</h1>
			</header>

			<!-- Iconos de redes sociales -->
			<nav class="flex space-x-8 mb-16" aria-label="Redes sociales">
					<!-- LinkedIn -->
					<a href="https://www.linkedin.com/in/carlos-pando-54786218a/" target="_blank" rel="noopener noreferrer" class="text-black hover:text-gray-600 transition-colors duration-200" aria-label="LinkedIn">
							<span class="icon-[garden--linkedin-stroke-12] text-5xl dark:text-white"></span>
					</a>

					<!-- GitHub -->
					<a href="https://github.com/carlos485" target="_blank" rel="noopener noreferrer" class="text-black hover:text-gray-600 transition-colors duration-200" aria-label="GitHub">
						<span class="icon-[feather--github] text-5xl dark:text-white"></span>
					</a>

					<!-- Email -->
					<a href="mailto:your.email@example.com" class="text-black hover:text-gray-600 transition-colors duration-200" aria-label="Email">
							<span class="icon-[oui--email] text-5xl dark:text-white"></span>
					</a>
			</nav>

			<!-- Botones de acciÃ³n -->
			<div class="flex flex-col sm:flex-row gap-4">
					<a href="/cv.pdf" target="_blank" rel="noopener noreferrer" class="bg-black dark:bg-white text-white hover:bg-gray-800 dark:text-black dark:hover:bg-gray-200 px-8 py-3 text-xl font-medium tracking-wide transition-all duration-300 flex items-center justify-center gap-2" role="button">
							<span class="icon-[streamline--business-user-curriculum] text-2xl"></span>
							ver cv
					</a>

					<a href="/experiencia" class="border-2 border-black dark:border-white text-black dark:text-white px-8 py-3 text-xl font-medium tracking-wide hover:bg-black dark:hover:bg-white hover:text-white dark:hover:text-black transition-all duration-300 flex items-center justify-center gap-2" role="button">
							<span class="icon-[fe--timeline] text-3xl"></span>
							experiencia
					</a>
			</div>
		</div>
	</body>
</html>
